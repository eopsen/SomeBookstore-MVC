@model Review

@{ 
    ViewData["Title"] = "Dodaj nową opinię";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="BookId" class="control-label"></label>
                        <select asp-for="BookId" class="form-control" asp-items="ViewBag.Books"></select>
                        <span asp-validation-for="BookId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReviewerName" class="control-label">Recenzant</label>
                        <input asp-for="ReviewerName" class="form-control" />
                        <span asp-validation-for="ReviewerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label">Ocena</label>
                        <input asp-for="Rating" class="form-control" type="" min="0" max="10" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Text" class="control-label">Opinia</label>
                        <textarea asp-for="Text" class="form-control"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Utwórz" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Powrót</a>
                    </div>
                </form>
            </div>
        </div>
</div>