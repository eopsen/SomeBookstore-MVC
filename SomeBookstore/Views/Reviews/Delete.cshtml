@model Review

@{
    ViewData["Title"] = "Usuń opinię";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">                
                <div class="form-group">
                    <label asp-for="BookId" class="control-label"></label>
                    <select asp-for="BookId" class="form-control" asp-items="ViewBag.Books" disabled></select>
                    <span asp-validation-for="BookId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReviewerName" class="control-label">Recenzant</label>
                    <input asp-for="ReviewerName" class="form-control" readonly/>
                    <span asp-validation-for="ReviewerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label">Ocena</label>
                    <input asp-for="Rating" class="form-control" type="" min="0" max="10"readonly />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Text" class="control-label">Opinia</label>
                    <textarea asp-for="Text" class="form-control" readonly></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Usuń" class="btn btn-danger float-right"/>
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Powrót</a>
                </div>
            </div>
        </div>
    </div>
